try {
  node() {
        checkout scm
        currentBuild.description = "my new description"
        stage('NuGet') {

              timestamps {
               bat 'echo nuget'
              sleep(2)
              }
        }

        stage('test') {
            timestamps {
                bat 'echo "executing tests"'
                sleep(5);
                }
        }
    }
    }
    catch {
      bat 'echo failure'
    }
    finally {
      bat 'echo success'
    }
